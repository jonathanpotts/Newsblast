@model AddSourceViewModel
@{
    ViewData["Title"] = "Add New Feed";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="FeedUrl"></label>
        <input asp-for="FeedUrl" class="form-control" placeholder="https://example.com/rss.xml">
        <span asp-validation-for="FeedUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    @Html.PartialAsync("_ValidationScriptsPartial")
}
