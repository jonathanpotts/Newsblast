@model List<Guild>
@{
    ViewData["Title"] = "Servers";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="py-2"></div>

@if (Model == null || Model.Count <= 0)
{
    <p>You are not a member of any servers.</p>
}
else
{
    <table class="table table-striped table-dark table-icons">
        <tbody>
            @foreach (var guild in Model.OrderBy(e => e.Name))
            {
                <tr>
                    <td>
                        @Html.Partial("_GuildSmallIconPartial", guild)
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Guild" asp-action="Inspect" asp-route-id="@guild.Id">@guild.Name</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}